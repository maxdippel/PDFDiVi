\def\hrulefill{\leaders\hrule\hfill\kern\z@}
\def\dotfill{\cleaders\hbox{$\m@th \mkern1.5mu.\mkern1.5mu$}\hfill\kern\z@}
% \kern\z@ added to end of \hrulefill and \dotfill
% to make them work in `tabular' and `array' environments.
% some (old) versions of jlatex do not have these changes made
% 
\newcommand{\solar}{{\bullet\hspace{-5.2pt}\odot}}   % solar symbol
\newcommand{\MO}{M_\solar}   % solar mass
\newcommand{\LO}{L_\solar}   % solar luminosity
\newcommand{\Mo}{M_{\bullet\hspace{-4.8pt}\odot}}   % ?
%
\newcommand{\ltsim}{\,\mbox{\raisebox{0.3ex}{$<$}\hspace{-0.8em}\raisebox{-0.7ex}{$\sim$}}\,}   %  less than or nearly equal
\newcommand{\gtsim}{\,\mbox{\raisebox{0.3ex}{$>$}\hspace{-0.8em}\raisebox{-0.7ex}{$\sim$}}\,}   %  greater than or nearly equal
%
% one-column figure with caption in verse environment
\newenvironment{fv}[3]{\begin{figure}[t]\vspace{#2}\begin{verse}%
	\footnotesize Fig.~#1.\hspace{4pt}#3}%
	{\end{verse}\end{figure}}
%
% one-column figure with caption in center environment
\newenvironment{fc}[3]{\begin{figure}[t]\vspace{#2}\begin{center}%
	\footnotesize Fig.~#1.\hspace{4pt}#3}%
	{\end{center}\end{figure}}
%
% two-column figure with caption in verse environment
\newenvironment{Fv}[3]{\begin{figure*}[t]\vspace{#2}\begin{verse}%
	\footnotesize Fig.~#1.\hspace{4pt}#3}%
	{\end{verse}\end{figure*}}
%
% two-column figure with caption in center environment
\newenvironment{Fc}[3]{\begin{figure*}[t]\vspace{#2}\begin{center}%
	\footnotesize Fig.~#1.\hspace{4pt}#3}%
	{\end{center}\end{figure*}}
