% Set the margins
 \oddsidemargin 2.75pc \evensidemargin 2.75pc
\topmargin -2.5pc
\textheight 8.50in
\textwidth 5.50in
\onecolumn \sloppy \flushbottom
\parindent 1em \leftmargini 2em \leftmargin\leftmargini
\leftmarginv .5em \leftmarginvi .5em

% Define page numbering style (used only for drafts)
\def\@oddhead{}\def\@evenhead{}
\def\@oddfoot{\rm\rightmark \hfil Page \thepage}
\def\@evenfoot{\@oddfoot}

% Define the Title style
\def\maketitle{\par
  \begingroup
  \def\thefootnote{\fnsymbol{footnote}}
  \def\@makefnmark{\hbox
  to 0pt{$^{\@thefnmark}$\hss}}
  \onecolumn\@maketitle  %%%%
  \@thanks
  \endgroup
  \setcounter{footnote}{0}
  \let\maketitle\relax
  \let\@maketitle\relax
  \gdef\@thanks{}\gdef\@author{}\gdef\@title{}\let\thanks\relax}
%
\def\@maketitle{\vbox to 2in{\hsize\textwidth
  \linewidth\hsize
  \vfil
  \begin{center}{\Large\bf \@title \par}\end{center} \vskip 1em   %%%%
  {\normalsize\begin{center}\begin{tabular}[t]{c}\@author
  \end{tabular}\end{center}\par}
  \vfil}}

\def\copyrightspace{\footnotetext{0}{\mbox{}
  \vrule height 97pt width 0pt}}

