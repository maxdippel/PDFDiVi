% Abstract in italics
\def\aabstract#1{\centerline{\large\bf Abstract}
    \vspace{1pc}
    \vbox{\hsize5.in\leftskip4.25pc
           \noindent#1\par}}

% section heads
\def\onehead#1{\vskip1pc\noindent{\large\bf #1}\vskip10pt}
\def\twohead#1{\vskip1pc\noindent{\normalsize\it #1}\vskip8pt}
\def\threehead#1{\vskip1pc\noindent{\normalsize\it #1.}\hskip6pt}

% multiple-line oneheads
\def\Onehead#1#2{\vskip1pc\noindent{\large\bf #1}\newline
                 \hskip3pc{\large\bf #2}\vskip10pt}

