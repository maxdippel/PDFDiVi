\@input{agu10.sty}

% Create "plaintop" page style that has folios at top of page.

\def\ps@plaintop{\let\@mkboth\@gobbletwo
    \def\@oddfoot{}\def\@oddhead{\rm\hfil--\space\thepage\space--\hfil}
    \def\@evenfoot{}\let\@evenhead\@oddhead}

\def\ps@tagtitle{\let\@mkboth\@gobbletwo
    \def\@oddfoot{\rm\hfil\thepage\hfil}
    \def\@oddhead{\small\revtex@org\space\revtex@jnl\space
	\revtex@genre\space style, v\revtex@ver, \revtex@date\hfil}
    \let\@evenfoot\@oddfoot\let\@evenhead\@oddhead}

\ps@plain                            % Use "plain" pagestyle by default.
%\pretolerance=10000		     % Disable hyphenation
\setcounter{secnumdepth}{0}          % Don't number sections

% The following gives "reasonable" ragged right results.

%\@rightskip=\z@ plus 4em\rightskip\@rightskip

% Page size, spacing parameters, etc.

\newdimen\@fmwidth \@fmwidth=14cm
\newdimen\@bodywidth \@bodywidth=20pc
\textwidth=\@bodywidth
\textheight=8.6in
\topmargin=0in
\headheight=9pt
\headsep=12pt
\oddsidemargin=0in
\evensidemargin=0in
\parindent=1em
\parskip=0ex

\def\@tolerant{400}	  % 2x "normal" value; cuts down on overfull complaints
\def\@verytolerant{10000} % practically eliminates overfull complaints
\tolerance\@tolerant

